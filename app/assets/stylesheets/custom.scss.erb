@import "bootstrap-sprockets";
@import "bootstrap";

$golden-orange-lighter: #FFCC57;
$golden-orange: #F2A900;
$golden-orange-darker: #DB9900;

$edit-blue: #739DFF;
$edit-blue-darker: #0049F2;

$update-green: #69A600;
$update-green-darker: #395A00;

body {
    padding-top: 60px;
    background-color: $golden-orange;
}

section {
    overflow: auto;
}

textarea {
    resize: vertical;
}

h1, h2, h3, h4, h5, h6 {
    line-height: 1;
    color: black !important;
}

h1 {
    font-size: 3em;
    letter-spacing: -2px;
    margin-bottom: 30px;
    text-align: center;
}

h2 {
    font-size: 1.2em;
    letter-spacing: -1px;
    margin-bottom: 30px;
    text-align: center;
    font-weight: normal;
}

h3 {
    font-size: 1.5em;
    text-align: left;
    font-family: Verdana, Geneva, Tahoma, sans-serif;
}

h4 {
    font-size: 2em;
    text-align: center;
}

h5 {
    font-size: 2.1em;
    font-weight: bold;
    letter-spacing: -1px;
    text-align: center;
}

h6 {
    font-size: 2em;
    text-align: start;
}

p {
    font-size: 1.1em;
    line-height: 1.7em;
    color: $golden-orange;
}

nav {
    ul {
        li {
            a {
                font-size: 1.5em;
                color: white !important;
            }
        }
    }
}



footer {
    margin-top: 45px;
    padding-top: 5px;
    border-top: 1px solid black;
    color: black;
    a {
        color: black;
        &:hover {
            color: black;
        }
    }
    small {
        float: left;
    }
    ul {
        float: right;
        list-style: none;
        li {
            float: left;
            margin-left: 15px;
        }
    }
}

.btn-edit {
    color: white;
    background-color: $edit-blue;
    border-color: $edit-blue;
    font-size: 1.3em;
    &:hover {
        color: white;
        border-color: $edit-blue-darker;
        border-color: $edit-blue-darker;
    }
}

.btn-danger {
    color: white;
    font-size: 1.3em;
    &:hover {}
}


.btn-primary {
    color: white;
    background: $golden-orange;
    border-color: $golden-orange;
    font-size: 1.3em;
    &:hover,&:active:focus,&:active,&:focus{
        color: white;
        background: $golden-orange-darker;
        border-color: $golden-orange-darker;
    }
}

.btn-update {
    color: white;
    background: $update-green;
    border-color: $update-green;
    font-size: 1.3em;
    &:hover {
        color: white;
        background: $update-green-darker;
        border-color: $update-green-darker;
    }
}

.list-group-item {
    background-color: white;
    border-color: $golden-orange;
    word-break: break-all;
}

.v-align-middle {
    display: flex;
    align-items: center;
}

.form-control-custom {
    background-color: white;
    color: black;
    font-size: 1.5em;
}

.navbar-center {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100%;
}

.custom-container {
    background-color: black;
}

.custom-jumbotron {
    background: image_url("background.png") !important;
    background-size: cover;
}

.panel-primary > .panel-heading {
    color: $golden-orange;
    background: $golden-orange-lighter;
    border-color: transparent;
}

.panel-primary > .panel-body {
    border-color: bold;
    background: $golden-orange-lighter;
}

.panel-primary > .panel-footer {
    background: $golden-orange-lighter;
    border-color: $golden-orange-lighter;
}

.panel-primary {
    border-color: $golden-orange-lighter;
}

.panel:hover {
    text-decoration: none;
}


.navbar {
    color: black;
}

#logo {
    float: left;
    margin-right: 0px;
    font-size: 1.7em;
    color: $golden-orange;
    letter-spacing: -1px;
    padding-top: 0%;
    font-weight: bold;
    &:hover {
        text-decoration: none;    
    }
}

.center {
    text-align: center;
    h1 {
        margin-bottom: 10px;
    }
}

@mixin box_sizing {
    -moz-boz-sizing: border-box;
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
}

.debug_dump {
    clear: both;
    float: left;
    width: 100%;
    margin-top: 45px;
    @include box_sizing;
}